@model List<Post>
@{
	int count = 0;
}
<div class="container">
	<div class="d-flex" style="justify-content:space-between;align-items:center">
		<h1>Posts</h1>
		<a class="btn btn-primary" asp-controller="Post" asp-action="Create">Create</a>

	</div>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">No#</th>
				<th scope="col">Id</th>
				<th scope="col">Title</th>
				<th scope="col">Description</th>
				<th scope="col">Image</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;
				<tr>
					<th scope="row">@count</th>
					<td>@item.Id</td>
					<td>@item.Title</td>
					<td>@item.Description</td>
					<td>
						<div style="width:100px">
							<img width="100%" src="~/Upload/PostImage/@item.ImgUrl">
						</div>
					</td>
					<td>
						<a class="btn btn-secondary" asp-controller="Post" asp-action="Update" asp-route-id="@item.Id">Update</a>
						<a class="btn btn-danger" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>